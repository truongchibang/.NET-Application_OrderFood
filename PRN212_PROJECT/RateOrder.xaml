<Window x:Class="PRN212_PROJECT.RateOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_PROJECT"
        mc:Ignorable="d"
        Title="Đánh giá đơn hàng" Height="500" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Đánh giá đơn hàng" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Mã đơn hàng: " FontWeight="Bold"/>
                <TextBlock Text="{Binding OrderId}"/>
            </StackPanel>
            <TextBlock Text="Chi tiết đơn hàng:" FontWeight="Bold" Margin="0,10,0,5"/>
        </StackPanel>

        <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200">
                <StackPanel>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Món ăn" FontWeight="Bold" Margin="5,0"/>
                        <TextBlock Grid.Column="1" Text="Số lượng" FontWeight="Bold" Margin="5,0" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="Giá" FontWeight="Bold" Margin="5,0" HorizontalAlignment="Right"/>
                    </Grid>
                    <ItemsControl Name="OrderItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Food.FoodName}" Margin="5,0" TextWrapping="Wrap"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Quantity}" Margin="5,0" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="{Binding Food.Price, StringFormat={}{0:N0} VND}" Margin="5,0" HorizontalAlignment="Right"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <StackPanel Orientation="Horizontal" Margin="5,10,5,5" HorizontalAlignment="Right">
                        <TextBlock Text="Tổng tiền: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding Total, StringFormat={}{0:N0} VND}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Điểm đánh giá:" FontWeight="Bold" Margin="0,0,0,5"/>
            <ComboBox Name="RatingComboBox" Width="100" HorizontalAlignment="Left">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="4" Margin="0,0,0,10">
            <TextBlock Text="Nhận xét:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Name="CommentTextBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
        </StackPanel>

        <Button Grid.Row="5" Content="Đánh giá" Width="100" HorizontalAlignment="Right" Margin="0,0,0,10" Click="RateOrder_Click"/>
    </Grid>
</Window>
