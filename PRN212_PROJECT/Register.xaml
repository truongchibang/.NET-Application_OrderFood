<Window x:Class="PRN212_PROJECT.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_PROJECT"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Register" Height="650" Width="950">
    <Grid Background="WhiteSmoke" Margin="20">
        <Border Background="White" 
            CornerRadius="8" 
            Padding="30"
            Width="350"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Create Account" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>
                <TextBlock Text="Username" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsernameReg" Height="30"/>
                <TextBlock Text="Your Phone" Margin="0,15,0,5"/>
                <TextBox x:Name="txtPhone" Height="30"/>
                <TextBlock Text="Email" Margin="0,15,0,5"/>
                <TextBox x:Name="txtEmailReg" Height="30"/>
                <TextBlock Text="Address" Margin="0,15,0,5"/>
                <TextBox x:Name="txtAddress" Height="30"/>
                <TextBlock Text="Password" Margin="0,15,0,5"/>
                <PasswordBox x:Name="pwdBoxReg" Height="30"/>
                <TextBlock Text="Confirm Password" Margin="0,15,0,5"/>
                <PasswordBox x:Name="pwdBoxConfirm" Height="30"/>
                <Button Content="Register" 
                Height="35" 
                Margin="0,20,0,0"
                Click="Button_Click"/>
                <TextBlock HorizontalAlignment="Center" Margin="0,15,0,0">
          <Run Text="Already have an account? "/>
          <Hyperlink Click="HyperlinkLogin_Click">
            Login
          </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
