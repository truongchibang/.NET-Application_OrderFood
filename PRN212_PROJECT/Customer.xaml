<Window x:Class="PRN212_PROJECT.Customer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_PROJECT"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Customer" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Button Content="Logout"
        DockPanel.Dock="Bottom"
        Height="30"
        Margin="10"
        HorizontalAlignment="Right"
        Width="100" Click="Button_Click"/>


            <TabControl TabStripPlacement="Left"
            Margin="10" SelectionChanged="TabControl_SelectionChanged">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Background" Value="Blue"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="Green"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TabControl.Resources>

                <TabItem Header="Mua sắm">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0">
                            <ComboBox Name="FoodTypeComboBox" DisplayMemberPath="TypeName" Width="150" Margin="5" SelectionChanged="FoodTypeComboBox_SelectionChanged"/>
                            <TextBox Name="SearchTextBox" Width="200" Margin="5" TextChanged="SearchTextBox_TextChanged"/>
                        </StackPanel>
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl Name="FoodItemsControl">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="Black" BorderThickness="1" Margin="5" Width="150" Height="200">
                                            <StackPanel>
                                                <Image Height="100" Stretch="UniformToFill" Source="{Binding Image}" />
                                                <TextBlock Text="{Binding FoodName}" HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding Price, StringFormat='{}{0} VND'}" HorizontalAlignment="Center"/>
                                                <Button Content="Thêm vào giỏ hàng" Click="AddToCart_Click" Tag="{Binding FoodId}"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </TabItem>
                <TabItem Header="Giỏ hàng">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                            <ItemsControl Name="CartItemsControl">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="Black" BorderThickness="1" Margin="5" Width="150" Height="200">
                                            <StackPanel>
                                                <Image Height="100" Stretch="UniformToFill" Source="{Binding Food.Image}" />
                                                <TextBlock Text="{Binding Food.FoodName}" HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding Food.Price, StringFormat='{}{0} VND'}" HorizontalAlignment="Center"/>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                                    <Button Content="-" Width="20" Tag="{Binding FoodCart1}" Click="DecreaseQuantity_Click"/>
                                                    <TextBlock Text="{Binding Quantity}" Width="30" TextAlignment="Center"/>
                                                    <Button Content="+" Width="20" Tag="{Binding FoodCart1}" Click="IncreaseQuantity_Click"/>
                                                </StackPanel>
                                                <Button Content="Xoá sản phẩm" Width="20" Tag="{Binding FoodCart1}" Click="DeleteProduct_Click"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                            <TextBlock Name="TotalPriceTextBlock" Text="Tổng tiền: 0 VND" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <Button Content="Chốt đơn" Width="100" Click="Checkout_Click"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Đơn hàng đã đến">
                    <Grid Margin="10">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl Name="OrderList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="180"/>
                                                    <ColumnDefinition Width="180"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="80"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Path=OrderId, StringFormat='Mã đơn: {0}'}" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding Path=AccountId, StringFormat='Khách hàng: {0}'}"/>
                                                    <TextBlock Text="{Binding Path=TimeOder, StringFormat='Thời gian: {0:dd/MM/yyyy HH:mm}'}"/>
                                                </StackPanel>

                                                <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Column="1">
                                                    <ItemsControl ItemsSource="{Binding Food_orders}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Text="{Binding FoodName}" Margin="0,0,10,0"/>
                                                                    <TextBlock Text="{Binding Quantity, StringFormat='x{0}'}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </ScrollViewer>
                                                <TextBlock Grid.Column="2" Text="{Binding Total, StringFormat='Tổng: {0:N0} VNĐ'}" VerticalAlignment="Center"/>

                                                <Button Grid.Column="3" Content="Đã nhận đơn hàng" Click="AcceptOrder_Click" Tag="{Binding OrderId}" Width="60" Margin="5"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </TabItem>
                <TabItem Header="Đánh giá đơn hàng">
                    <Grid Margin="10">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl Name="OrderFinishList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="180"/>
                                                    <ColumnDefinition Width="180"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="80"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Path=OrderId, StringFormat='Mã đơn: {0}'}" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding Path=AccountId, StringFormat='Khách hàng: {0}'}"/>
                                                    <TextBlock Text="{Binding Path=TimeOder, StringFormat='Thời gian: {0:dd/MM/yyyy HH:mm}'}"/>
                                                </StackPanel>

                                                <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Column="1">
                                                    <ItemsControl ItemsSource="{Binding Food_orders}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Text="{Binding FoodName}" Margin="0,0,10,0"/>
                                                                    <TextBlock Text="{Binding Quantity, StringFormat='x{0}'}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </ScrollViewer>
                                                <TextBlock Grid.Column="2" Text="{Binding Total, StringFormat='Tổng: {0:N0} VNĐ'}" VerticalAlignment="Center"/>

                                                <Button Grid.Column="3" Content="Đánh giá đơn hàng" Click="RateOrder_Click" Tag="{Binding OrderId}" Width="60" Margin="5"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </TabItem>
                <TabItem Header="Theo dõi đơn hàng">
                    <Grid>
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl Name="OrderItemsControl">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="Black" BorderThickness="1" Margin="5" Padding="5">
                                            <StackPanel>
                                                <TextBlock Text="{Binding OrderId, StringFormat='Mã đơn hàng: {0}'}" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding TimeOder, StringFormat='Thời gian đặt: {0:dd/MM/yyyy HH:mm:ss}'}" />
                                                <TextBlock Text="{Binding TimeFinish, StringFormat='Thời gian hoàn thành: {0:dd/MM/yyyy HH:mm:ss}', FallbackValue='Chưa hoàn thành'}" />
                                                <TextBlock Text="{Binding Total, StringFormat='Tổng tiền: {0:N0} VND'}" />
                                                <TextBlock Text="{Binding StatusNavigation.Name, StringFormat='Trạng thái: {0}'}" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </TabItem>
                <TabItem Header="Thông tin của tôi">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Tên:" Margin="5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Name="NameTextBox" Margin="5"/>
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Email:" Margin="5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Name="EmailTextBox" Margin="5"/>
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Số điện thoại:" Margin="5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Name="PhoneNumberTextBox" Margin="5"/>
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Mật khẩu:" Margin="5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Name="PasswordTextBox" Margin="5"/>
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Địa chỉ:" Margin="5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="4" Grid.Column="1" Name="AddressTextBox" Margin="5"/>
                        <Button Grid.Row="5" Grid.Column="1" Content="Cập nhật" Width="100" HorizontalAlignment="Left" Margin="417,14,0,0" Click="UpdateProfile_Click" Height="20" VerticalAlignment="Top"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </DockPanel>
    </Grid>
</Window>
