<Window x:Class="PRN212_PROJECT.Staff"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_PROJECT"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Staff" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Button Content="Logout" Click="Button_Click"
                DockPanel.Dock="Bottom"
                Height="30"
                Margin="10"
                HorizontalAlignment="Right"
                Width="100"/>


            <TabControl TabStripPlacement="Left"
                    Margin="10">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Background" Value="Blue"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="Green"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TabControl.Resources>

                <TabItem Header="Quản lý NV">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <ComboBox Name="RoleComboBox" Width="150" Margin="5" SelectionChanged="RoleComboBox_SelectionChanged"/>
                            <TextBox Name="SearchBox" Width="172" Margin="5" TextChanged="SearchBox_TextChanged" ToolTip="Tìm kiếm theo tên"/>
                        </StackPanel>

                        <ScrollViewer Grid.Row="1" Grid.Column="0" VerticalScrollBarVisibility="Auto">
                            <ItemsControl Name="EmployeeItemsControl">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="3*"/>
                                                    <ColumnDefinition Width="1*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding PhoneNumber, StringFormat='ID: {0}'}" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding Name, StringFormat='Tên: {0}'}"/>
                                                    <TextBlock Text="{Binding RoleName, StringFormat='Vai trò: {0}'}"/>
                                                </StackPanel>
                                                <Button Grid.Column="1" Content="Chọn" Tag="{Binding PhoneNumber}" Click="SelectEmployee_Click" Margin="0,5,0,0"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Margin="10,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="Thông tin nhân viên" FontWeight="Bold" Margin="0,0,0,10"/>
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="ID:" Margin="5"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Name="IdTextBox" Margin="5" IsReadOnly="True"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Tên:" Margin="5"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Name="NameTextBox" Margin="5" IsReadOnly="True"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Email:" Margin="5"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Name="EmailTextBox" Margin="5" IsReadOnly="True"/>
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Số điện thoại:" Margin="5"/>
                                <TextBox Grid.Row="3" Grid.Column="1" Name="PhoneNumberTextBox" Margin="5" IsReadOnly="True"/>
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Địa chỉ:" Margin="5"/>
                                <TextBox Grid.Row="4" Grid.Column="1" Name="AddressTextBox" Margin="5" IsReadOnly="True"/>
                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Vai trò:" Margin="5"/>
                                <ComboBox Grid.Row="5" Grid.Column="1" Name="RoleUpdateComboBox" Margin="5" DisplayMemberPath="RoleName"/>
                            </Grid>
                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Button Content="Thêm" Width="100" Margin="5" Click="AddEmployee_Click" Grid.Row="0"/>
                                    <Button Content="Cập nhật vai trò" Width="100" Margin="5" Click="UpdateRole_Click" Grid.Row="1"/>
                                </Grid>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Button Content="Xóa" Width="100" Margin="5" Click="DeleteEmployee_Click" Grid.Row="0"/>
                                    <Button Content="Reset" Width="100" Margin="5" Click="ResetFields_Click" Grid.Row="1"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="Thay đổi thông tin cá nhân">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Tên:" Margin="5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Name="NameBox" Margin="5"/>
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Email:" Margin="5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Name="EmailBox" Margin="5"/>
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Số điện thoại:" Margin="5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Name="PhoneNumberBox" Margin="5"/>
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Mật khẩu:" Margin="5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Name="PasswordTextBox" Margin="5"/>
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Địa chỉ:" Margin="5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="4" Grid.Column="1" Name="AddressBox" Margin="5"/>
                        <Button Grid.Row="5" Grid.Column="1" Content="Cập nhật" Width="100" HorizontalAlignment="Left" Margin="443,5,0,0" Click="UpdateProfile_Click" Height="20" VerticalAlignment="Top"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Báo cáo">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0">
                            <ComboBox Name="StatusComboBox" DisplayMemberPath="Name" Width="150" Margin="5" SelectionChanged="StatusComboBox_SelectionChanged"/>
                            <TextBox Name="SearchTextBox" Width="200" Margin="5" TextChanged="SearchTextBox_TextChanged"/>
                        </StackPanel>
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
                            <ItemsControl Name="OrderItemsControl">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="Black" BorderThickness="1" Margin="5" Padding="5">
                                            <StackPanel>
                                                <TextBlock Text="{Binding OrderId, StringFormat='Mã đơn hàng: {0}'}" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding Account.Name, StringFormat='Tên khách hàng: {0}'}"/>
                                                <TextBlock Text="{Binding Account.PhoneNumber, StringFormat='Số điện thoại khách hàng: {0}'}"/>
                                                <TextBlock Text="{Binding TimeOder, StringFormat='Thời gian đặt: {0:dd/MM/yyyy HH:mm:ss}'}" />
                                                <TextBlock Text="{Binding TimeFinish, StringFormat='Thời gian hoàn thành: {0:dd/MM/yyyy HH:mm:ss}', FallbackValue='Chưa hoàn thành'}" />
                                                <TextBlock Text="{Binding Total, StringFormat='Tổng tiền: {0:N0} VND'}" />
                                                <TextBlock Text="{Binding StatusNavigation.Name, StringFormat='Trạng thái: {0}'}" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </TabItem>
            </TabControl>
        </DockPanel>
    </Grid>
</Window>
